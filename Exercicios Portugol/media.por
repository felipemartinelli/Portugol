programa
{
	
	funcao inicio()
	{
		real nota1, nota2, media

		escreva("Digite a primeira nota\n")
		leia(nota1)
		escreva("Digite a segunda nota\n")
		leia(nota2)		

		media = (nota1 + nota2)/2
		escreva("A média das notas vale: ", media)
	}
}
